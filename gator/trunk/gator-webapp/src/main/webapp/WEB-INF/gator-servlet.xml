<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">


  
  <import resource="servletContextParams.xml" />


  <!-- Default View Resolver -->
  <bean id="viewResolver"
    class="org.springframework.web.servlet.view.InternalResourceViewResolver"
    p:cache="true"
    p:viewClass="org.springframework.web.servlet.view.JstlView"
    p:prefix="/WEB-INF/jsp/"
    p:suffix=".jsp"
  />


  <!-- Exception handling -->
  <bean id="defaultExceptionHandler"
      class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver"
    p:defaultErrorView="errGeneral">
  </bean>
  
  <!-- Message source for this application -->
  <bean id="messageSource"
    class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
    p:basename="/WEB-INF/messages"
    p:cacheSeconds="600"
  />
  
  
  <!-- Some controllers are transactional -->
  <tx:annotation-driven transaction-manager="transactionManager"/>


  <!-- Controllers -->
  <bean id="baseViewController" abstract="true"
    p:configManager-ref="configManager"
  />
  
  <bean id="baseFormController" abstract="true"
    p:sessionForm="true"
    p:configManager-ref="configManager"
  />

  <bean id="projectListController"
    class="edu.vt.middleware.gator.web.ProjectListViewController"
    parent="baseViewController"
    p:viewName="projectList"
  />

  <bean id="projectCreateController"
    class="edu.vt.middleware.gator.web.ProjectCreateFormController"
    parent="baseFormController"
    p:commandName="project"
    p:commandClass="edu.vt.middleware.gator.ProjectConfig"
    p:formView="projectEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="projectEditController"
    class="edu.vt.middleware.gator.web.ProjectEditFormController"
    parent="baseFormController"
    p:commandName="project"
    p:formView="projectEdit"
    p:successView="redirect:/secure/list.html"
  />

  <bean id="projectDeleteController"
    class="edu.vt.middleware.gator.web.ProjectDeleteFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="projectDelete"
    p:successView="redirect:/secure/list.html"
  />
  
  <bean id="projectCopyController"
    class="edu.vt.middleware.gator.web.ProjectCopyFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="projectCopy"
    p:successView="redirect:/secure/list.html"
  />

  <bean id="categoryEditController"
    class="edu.vt.middleware.gator.web.CategoryEditFormController"
    parent="baseFormController"
    p:commandName="wrapper"
    p:formView="categoryEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="categoryBulkEditController"
    class="edu.vt.middleware.gator.web.CategoryBulkEditFormController"
    parent="baseFormController"
    p:commandName="formData"
    p:formView="categoryBulkEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="categoryDeleteController"
    class="edu.vt.middleware.gator.web.CategoryDeleteFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="deleteForm"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="appenderEditController"
    class="edu.vt.middleware.gator.web.AppenderEditFormController"
    parent="baseFormController"
    p:commandName="wrapper"
    p:formView="appenderEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="appenderCopyController"
    class="edu.vt.middleware.gator.web.AppenderCopyFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="appenderCopy"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="appenderDeleteController"
    class="edu.vt.middleware.gator.web.AppenderDeleteFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="deleteForm"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />
  
  <bean id="clientEditController"
    class="edu.vt.middleware.gator.web.ClientEditFormController"
    parent="baseFormController"
    p:commandName="client"
    p:formView="clientEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="clientDeleteController"
    class="edu.vt.middleware.gator.web.ClientDeleteFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="deleteForm"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />
  
  <bean id="permEditController"
    class="edu.vt.middleware.gator.web.PermissionEditFormController"
    parent="baseFormController"
    p:commandName="perm"
    p:formView="permEdit"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="permDeleteController"
    class="edu.vt.middleware.gator.web.PermissionDeleteFormController"
    parent="baseFormController"
    p:commandName="spec"
    p:formView="deleteForm"
    p:successView="redirect:/secure/project/@PROJECT_NAME@/edit.html"
  />

  <bean id="xmlConfigViewController"
    class="edu.vt.middleware.gator.web.XmlConfigViewController"
    parent="baseViewController"
    p:viewName="log4jXml"
    p:bindAddress="${log4j.server.bindAddress}"
    p:port="${log4j.server.port}"
  />
    
  <bean id="logWatcherFormController"
    class="edu.vt.middleware.gator.web.LogWatcherFormController"
    parent="baseFormController"
    p:commandName="watchConfig"
    p:formView="watchForm"
    p:socketServer-ref="log4jSocketServer"
  />

  <!-- Maps URLs onto controllers -->
  <bean id="urlMapping" 
      class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="interceptors">
      <list>
        <bean
          class="org.springframework.orm.jpa.support.OpenEntityManagerInViewInterceptor"
          p:entityManagerFactory-ref="entityManagerFactory" /> 
      </list>
    </property>
    <property name="mappings">
      <props>
        <prop key="/secure/list.html">projectListController</prop>
        <prop key="/secure/project/add.html">projectCreateController</prop>
        <prop key="/secure/project/copy.html">projectCopyController</prop>
        <prop key="/secure/project/*/edit.html">projectEditController</prop>
        <prop key="/secure/project/*/delete.html">projectDeleteController</prop>
        <prop key="/secure/project/*/category/add.html">categoryEditController</prop>
        <prop key="/secure/project/*/category/bulk_edit.html">categoryBulkEditController</prop>
        <prop key="/secure/project/*/category/*/edit.html">categoryEditController</prop>
        <prop key="/secure/project/*/category/*/delete.html">categoryDeleteController</prop>
        <prop key="/secure/project/*/appender/add.html">appenderEditController</prop>
        <prop key="/secure/project/*/appender/copy.html">appenderCopyController</prop>
        <prop key="/secure/project/*/appender/*/edit.html">appenderEditController</prop>
        <prop key="/secure/project/*/appender/*/delete.html">appenderDeleteController</prop>
        <prop key="/secure/project/*/client/add.html">clientEditController</prop>
        <prop key="/secure/project/*/client/*/edit.html">clientEditController</prop>
        <prop key="/secure/project/*/client/*/delete.html">clientDeleteController</prop>
        <prop key="/secure/project/*/perm/add.html">permEditController</prop>
        <prop key="/secure/project/*/perm/*/edit.html">permEditController</prop>
        <prop key="/secure/project/*/perm/*/delete.html">permDeleteController</prop>
        <prop key="/secure/project/*/watch.html">logWatcherFormController</prop>
        <prop key="/project/*/log4j.xml">xmlConfigViewController</prop>
      </props>    
    </property>
  </bean>

</beans>
