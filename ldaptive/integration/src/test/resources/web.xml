<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <servlet>
    <servlet-name>LdifSearch</servlet-name>
    <servlet-class>org.ldaptive.servlets.SearchServlet</servlet-class>
    <init-param>
      <param-name>ldapUrl</param-name>
      <param-value>${ldapTestHost}</param-value>
    </init-param>
    <init-param>
      <param-name>baseDn</param-name>
      <param-value>${ldapBaseDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindDn</param-name>
      <param-value>${ldapBindDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindCredential</param-name>
      <param-value>${ldapBindCredential}</param-value>
    </init-param>
    <init-param>
      <param-name>prunePeriod</param-name>
      <param-value>5</param-value>
    </init-param>
    <init-param>
      <param-name>expirationTime</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>poolType</param-name>
      <param-value>BLOCKING</param-value>
    </init-param>
    <init-param>
      <param-name>outputFormat</param-name>
      <param-value>LDIF</param-value>
    </init-param>
    <init-param>
      <param-name>blockWaitTime</param-name>
      <param-value>5000</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>DsmlSearch</servlet-name>
    <servlet-class>org.ldaptive.servlets.SearchServlet</servlet-class>
    <init-param>
      <param-name>ldapUrl</param-name>
      <param-value>${ldapTestHost}</param-value>
    </init-param>
    <init-param>
      <param-name>baseDn</param-name>
      <param-value>${ldapBaseDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindDn</param-name>
      <param-value>${ldapBindDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindCredential</param-name>
      <param-value>${ldapBindCredential}</param-value>
    </init-param>
    <init-param>
      <param-name>prunePeriod</param-name>
      <param-value>5</param-value>
    </init-param>
    <init-param>
      <param-name>expirationTime</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>poolType</param-name>
      <param-value>SOFTLIMIT</param-value>
    </init-param>
    <init-param>
      <param-name>outputFormat</param-name>
      <param-value>DSML</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>AttributeSearch</servlet-name>
    <servlet-class>org.ldaptive.servlets.AttributeServlet</servlet-class>
    <init-param>
      <param-name>ldapUrl</param-name>
      <param-value>${ldapTestHost}</param-value>
    </init-param>
    <init-param>
      <param-name>baseDn</param-name>
      <param-value>${ldapBaseDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindDn</param-name>
      <param-value>${ldapBindDn}</param-value>
    </init-param>
    <init-param>
      <param-name>bindCredential</param-name>
      <param-value>${ldapBindCredential}</param-value>
    </init-param>
    <init-param>
      <param-name>prunePeriod</param-name>
      <param-value>5</param-value>
    </init-param>
    <init-param>
      <param-name>expirationTime</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>poolType</param-name>
      <param-value>BLOCKING</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>LdifSearch</servlet-name>
    <url-pattern>/LdifSearch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DsmlSearch</servlet-name>
    <url-pattern>/DsmlSearch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AttributeSearch</servlet-name>
    <url-pattern>/AttributeSearch</url-pattern>
  </servlet-mapping>
</web-app>
